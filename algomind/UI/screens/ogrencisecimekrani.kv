# ogrencisecimekrani.kv

# Bu kural sadece bu dosya içindeki butonlar için geçerlidir.
<RoundedButton@Button>:
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: get_color_from_hex('#357ABD') if self.state == 'normal' else get_color_from_hex('#407dbf')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]

<OgrenciSecimEkrani>:
    main_dropdown_button: main_dropdown_button
    selected_ogrenci_label: selected_ogrenci_label
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)
        canvas.before:
            Color:
                rgba: (0.4, 0.6, 0.9, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            BoxLayout: # Sol tarafı boş bırak
            RoundedButton:
                text: 'Profil'
                size_hint_x: None
                width: dp(100)
                font_size: '18sp'
                on_release: root.on_profile_button_press()
        RoundedButton:
            id: main_dropdown_button
            text: 'Öğrenci Seçin'
            size_hint_y: None
            height: dp(70)
            font_size: '24sp'
            on_release: root.dropdown.open(self)
        Label:
            id: selected_ogrenci_label
            text: "Lütfen bir öğrenci seçin"
            size_hint_y: None
            height: dp(50)
            font_size: '22sp'
        BoxLayout: